<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="test.com.moim.member">
	<select id="M_SELECT_ALL" resultType="test.com.moim.member.model.MemberVO">
		select * from member order by num desc
	</select>
	
	<select id="M_SELECT_ONE" resultType="test.com.moim.member.model.MemberVO">
		select * from member where num = #{num}
	</select>
	
	<select id="M_SEARCH_LIST_SOM_TITLE" resultType="test.com.moim.member.model.MemberVO">
		select * from member where som_title like #{searchWord}
	</select>
	
	<select id="M_SEARCH_LIST_USER_ID" resultType="test.com.moim.member.model.MemberVO">
		select * from member where user_id like #{searchWord} 
	</select>
	
	
	
	<insert id="M_INSERT" parameterType="test.com.moim.member.model.MemberVO">
		insert into member(num,user_id,join_date,position,som_title,save_name) 
		values(seq_member.nextval,#{user_id},#{join_date},#{position},#{som_title},#{save_name})
	</insert>
	
	<update id="M_UPDATE" parameterType="test.com.moim.member.model.MemberVO">
		update member set position=#{position} where num = #{num}
	</update>
	
	<delete id="M_DELETE">
		delete from member where num = #{num}
	</delete>

</mapper>